<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|right|end"
        android:textAlignment="viewEnd"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn7"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeSeven"
            android:text="7"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeEight"
            android:text="8"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeNine"
            android:text="9"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeDiv"
            android:text="/"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeFour"
            android:text="4"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeFive"
            android:text="5"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeSix"
            android:text="6"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeX"
            android:text="x"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeOne"
            android:text="1"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeTwo"
            android:text="2"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeThree"
            android:text="3"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeMinus"
            android:text="-"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="writeZero"
            android:text="0"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="addDot"
            android:text="."
            android:textSize="26sp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="clear"
            android:text="C"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="92dp"
            android:layout_height="85dp"
            android:onClick="addTo"
            android:text="+"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@android:color/holo_blue_light"
            android:onClick="equalTo"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="26sp" />
    </LinearLayout>
</LinearLayout>